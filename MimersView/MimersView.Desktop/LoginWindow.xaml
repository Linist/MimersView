<Window
    x:Class="MimersView.Desktop.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MimersView - Login"
    Width="400"
    Height="300"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Velkommen til MimersView" />

        <TextBox
            x:Name="UsernameBox"
            Width="250"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            />

        <Button
            Width="100"
            Height="30"
            Margin="0,90,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="Login_Click"
            Content="Login" />
    </Grid>
</Window>
