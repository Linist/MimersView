<Window
    x:Class="MimersView.Desktop.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Chat - MimersView"
    Width="400"
    Height="500"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <!--  Liste af beskeder  -->
        <ListBox x:Name="MessageList" Margin="10,10,10,50" />

        <!--  Input og send-knap  -->
        <DockPanel Margin="10" VerticalAlignment="Bottom">
            <TextBox
                x:Name="MessageInput"
                Width="300"
                Height="30"
                VerticalAlignment="Center" />
            <Button
                Width="60"
                Height="30"
                Click="SendMessage_Click"
                Content="Send" />
        </DockPanel>
    </Grid>
</Window>
