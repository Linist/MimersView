<Window
    x:Class="MimersView.Desktop.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Chat - MimersView"
    Width="450"
    Height="600"
    Background="#F8F9FA"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <!--  Header  -->
        <Border
            Height="60"
            VerticalAlignment="Top"
            Background="#2D3748">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Text="MimersView Chat" />
        </Border>

        <!--  Liste af beskeder  -->
        <ListBox
            x:Name="MessageList"
            Margin="10,70,10,100"
            Background="White"
            BorderBrush="#CBD5E0"
            BorderThickness="1"
            FontSize="14"
            ScrollViewer.VerticalScrollBarVisibility="Auto" />

        <!--  Input og send-knap  -->
        <DockPanel Margin="10,0,10,60" VerticalAlignment="Bottom">
            <TextBox
                x:Name="MessageInput"
                Height="35"
                Padding="5"
                VerticalAlignment="Center"
                Background="White"
                BorderBrush="#A0AEC0"
                BorderThickness="1"
                FontSize="14" />
            <Button
                Width="80"
                Margin="10,0,0,0"
                Background="#4CAF50"
                BorderBrush="#4CAF50"
                Click="SendMessage_Click"
                Content="Send"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White" />
        </DockPanel>

        <!--  Smileys  -->
        <StackPanel
            Height="50"
            Margin="10,0,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Background="#EDF2F7"
            
            Orientation="Horizontal">
            <Button
                Width="40"
                Height="40"
                Margin="5"
                Background="White"
                BorderBrush="#CBD5E0"
                Click="Smiley_Click"
                Content="ðŸ˜Š"
                Cursor="Hand"
                FontSize="20" />
            <Button
                Width="40"
                Height="40"
                Margin="5"
                Background="White"
                BorderBrush="#CBD5E0"
                Click="Smiley_Click"
                Content="ðŸ˜‚"
                Cursor="Hand"
                FontSize="20" />
            <Button
                Width="40"
                Height="40"
                Margin="5"
                Background="White"
                BorderBrush="#CBD5E0"
                Click="Smiley_Click"
                Content="ðŸ˜"
                Cursor="Hand"
                FontSize="20" />
            <Button
                Width="40"
                Height="40"
                Margin="5"
                Background="White"
                BorderBrush="#CBD5E0"
                Click="Smiley_Click"
                Content="ðŸ˜Ž"
                Cursor="Hand"
                FontSize="20" />
